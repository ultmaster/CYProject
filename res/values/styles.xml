    <!-- Dark Ocean Theme -->
    <style name="DarkOceanTheme" parent="android:style/Theme.Holo">
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="LayoutMarginBig">@style/defLayoutMarginBig</item>
        <item name="LayoutMarginSmall">@style/defLayoutMarginSmall</item>
        <item name="android:windowBackground">@color/dk_background</item>
        <item name="android:colorBackgroundCacheHint">#00000000</item>
        <item name="colorBlue">@color/dk_color_blue</item>
        <item name="colorRed">@color/dk_color_red</item>
        <item name="colorBlack">@color/dk_black</item>
        <item name="colorWhite">@color/dk_white</item>
        <item name="colorGrey">@color/dk_grey</item>
        <item name="LayoutBackground">@color/dk_background</item>
        <item name="buttonBackground1">@drawable/dark_button_style</item>
        <item name="buttonBackground2">@drawable/dark_button_style</item>
        <item name="buttonBackground3">@drawable/dark_button_style</item>
        <item name="buttonTextColor">@drawable/dark_button_text_style</item>
        <item name="bigButtonStyle1">@style/dkBigButton</item>
        <item name="smallButtonStyle1">@style/dkSmallButton</item>
        <item name="smallButtonStyle2">@style/dkSmallButton</item>
        <item name="smallButtonStyle3">@style/dkSmallButton</item>
    </style>

    <color name="dk_color_red">#ceb8e6</color>
    <color name="dk_color_blue">#b8d0e6</color>
    <color name="dk_btn_color_pressed">#11143d</color>
    <color name="dk_btn_color_default">#a5a6c2</color>
    <color name="dk_black">#eeeff6</color>
    <color name="dk_grey">#c2c4d3</color>
    <color name="dk_white">#0e0f12</color>
    <color name="dk_background">#101118</color>
    <color name="dk_background_focused">#2c2e3c</color>

    <style name="dkBigButton">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/buttonBackground1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textSize">20sp</item>
