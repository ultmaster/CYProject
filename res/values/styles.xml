<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="fullscreenDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:padding">0dp</item>
        <item name="android:alpha">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- DefaultTheme -->
    <style name="DefaultTheme" parent="AppBaseTheme">
        <item name="LayoutMarginBig">@style/defLayoutMarginBig</item>
        <item name="LayoutMarginSmall">@style/defLayoutMarginSmall</item>
    </style>

    <style name="defLayoutMarginBig">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="defLayoutMarginSmall">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="mediumGreyText" parent="mediumBlackText">
        <item name="android:textColor">?attr/colorGrey</item>
    </style>

    <style name="mediumRedText" parent="mediumBlackText">
        <item name="android:textColor">?attr/colorRed</item>
    </style>

    <style name="mediumBlueText" parent="mediumBlackText">
        <item name="android:textColor">?attr/colorBlue</item>
    </style>

    <style name="mediumBlackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">?attr/colorBlack</item>
    </style>

    <style name="mediumBlackEditText" parent="mediumBlackText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="medium_smallBlackText" parent="mediumBlackText">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="medium_smallGreyText" parent="mediumGreyText">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="smallBlueText" parent="mediumBlueText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="smallBlackText" parent="mediumBlackText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="largeBlackText" parent="mediumBlackText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="largeGreyText" parent="mediumGreyText">
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Blue and green theme -->
    <style name="BlueAndGreenTheme" parent="DefaultTheme">
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:windowBackground">@color/bg_background</item>
        <item name="android:colorBackgroundCacheHint">#00000000</item>
        <item name="colorBlue">@color/bg_color_blue</item>
        <item name="colorRed">@color/bg_color_red</item>
        <item name="colorBlack">@color/bg_black</item>
        <item name="colorWhite">@color/bg_white</item>
        <item name="colorGrey">@color/bg_grey</item>
        <item name="LayoutBackground">@color/bg_background</item>
        <item name="buttonBackground1">@drawable/blue_button_style</item>
        <item name="buttonBackground2">@drawable/aquamarine_button_style</item>
        <item name="buttonBackground3">@drawable/green_button_style</item>
        <item name="buttonTextColor">@drawable/blueandgreen_button_text_style</item>
        <item name="bigButtonStyle1">@style/bgBigBlueButton</item>
        <item name="smallButtonStyle1">@style/bgSmallBlueButton</item>
        <item name="smallButtonStyle2">@style/bgSmallAquamarineButton</item>
        <item name="smallButtonStyle3">@style/bgSmallGreenButton</item>
    </style>

    <color name="bg_color_red">#e33c3c</color>
    <color name="bg_color_blue">#00d2ff</color>
    <color name="bg_btn_color_pressed_blue">#90d9ff</color>
    <color name="bg_btn_color_default_blue">#1088c6</color>
    <color name="bg_btn_color_pressed_aquamarine">#90ffe9</color>
    <color name="bg_btn_color_default_aquamarine">#04b4ae</color>
    <color name="bg_btn_color_pressed_green">#abffc7</color>
    <color name="bg_btn_color_default_green">#10b944</color>
    <color name="bg_black">#000000</color>
    <color name="bg_grey">#444444</color>
    <color name="bg_white">#ffffff</color>
    <color name="bg_background">#e8fbff</color>
    <color name="bg_background_focused">#c1d7d7</color>

    <style name="bgBigBlueButton">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/buttonBackground1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bgSmallBlueButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/buttonBackground1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bgSmallAquamarineButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/buttonBackground2</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bgSmallGreenButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/buttonBackground3</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Yellow And Orange Theme -->
    <style name="YellowAndOrangeTheme" parent="DefaultTheme">
