        <item name="smallButtonStyle2">@style/yoSmallLightOrangeButton</item>
        <item name="smallButtonStyle3">@style/yoSmallYellowButton</item>
    </style>

    <color name="yo_color_red">#ab29f6</color>
    <color name="yo_color_blue">#ffae00</color>
    <color name="yo_btn_color_pressed_orange">#f0b8a0</color>
    <color name="yo_btn_color_default_orange">#e4581b</color>
    <color name="yo_btn_color_pressed_lightorange">#f8dfaf</color>
    <color name="yo_btn_color_default_lightorange">#e48c1b</color>
    <color name="yo_btn_color_pressed_yellow">#f8f7af</color>
    <color name="yo_btn_color_default_yellow">#e6e300</color>
    <color name="yo_black">#000000</color>
    <color name="yo_grey">#433c31</color>
    <color name="yo_white">#ffffff</color>
    <color name="yo_background">#fff9e8</color>
    <color name="yo_background_focused">#d7cdc1</color>

    <style name="yoBigOrangeButton">
