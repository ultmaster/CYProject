<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/LayoutBackground" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="?attr/colorBlue"
            android:textSize="50sp" />

        <TextView
            style="@style/largeBlackText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/developer_info" />

        <TextView
            style="@style/medium_smallBlackText"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:text="@string/e_mail_pointer" />

        <TextView
            style="@style/medium_smallBlackText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/contact_info" />

        <TextView
            style="@style/smallBlackText"
            android:layout_marginTop="5dp"
            android:text="@string/contact_developer" />

        <TextView
            style="@style/smallBlackText"
            android:text="@string/contact_package_name" />

        <TextView
            style="@style/smallBlackText"
            android:text="@string/contact_build_target" />

        <TextView
            style="@style/smallBlackText"
            android:text="@string/contact_min_sdk" />

        <TextView
            style="@style/smallBlackText"
            android:text="@string/contact_environment" />

        <TextView
            style="@style/smallBlackText"
            android:text="@string/contact_program_version" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

</ScrollView>